.vu-card {
  background-color: var(--card-bg);
  border: var(--card-border);

  &:hover {
    box-shadow: var(--boxshadow-4);
    transform: translate3d(0, -4px, 0);
  }

  transition: var(--transition-fast);
}

.vu-card__header {
  padding: 8px 16px;
  background-color: var(--card-header-bg);
}

.vu-card__body {
  padding: 16px;
}
